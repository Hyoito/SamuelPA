	@Override
	public void actionPerformed(ActionEvent e) {
		if (e.getSource() == btnInsertA) {
			letter1.setText(btnInsertA.getText());
			return;

			}
	}
	
	public static void main(String[] args) {
		JFrame window = new MainWindow();
		window.setVisible(true);
