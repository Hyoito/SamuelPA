	private JPanel createPanelButtons3(){
		JPanel panel = new JPanel();
		panel.setLayout(new GridLayout(1, 7, 2, 2));
		
		btnInsertZ = new JButton("Z");
		btnInsertZ.addActionListener(this);
		
